<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    android:layout_margin="8dp"
    android:id="@+id/click_event"
    app:cardBackgroundColor="@color/cream"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Name     :"
            android:textSize="10dp"
            android:padding="10dp"
            android:textStyle="bold" />

       <TextView
           android:id="@+id/text_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:text="Name:"
           android:textSize="10dp"
           android:padding="10dp"
           android:textStyle="bold"/>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRetailerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ID           :"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_RetailerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name:"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRetailerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Address :"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_RetailerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Retailer:"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="phno1     :"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_RetailerContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Retailer:"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textRetailerPinCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:text="Retailer:"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_RetailerPinCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Retailer:"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="bold"/>






        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>